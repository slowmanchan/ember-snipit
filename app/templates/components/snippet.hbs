
<select onchange={{action "setSelection" value="target.value"}}>
  <option disabled selected>Language</option>
  <option value="javascript" selected={{equals this.snippet.language "javascript"}}>javascript</option>
  <option value="go" selected={{equals this.snippet.language "go"}}>go</option>
</select>

<select onchange={{action "setTheme" value="target.value"}}>
  <option disabled selected>Theme</option>
  <option value="solarized">solarized</option>
  <option value="twilight">twilight</option>
  <option value="3024-day">3024-day</option>
</select>

{{ivy-codemirror value=this.snippet.code valueUpdated=(action (mut this.code)) options=(hash theme=this.selectedTheme lineNumbers=true mode=this.snippet.language)}}
<button {{action "logCode"}}>Submit</button>
